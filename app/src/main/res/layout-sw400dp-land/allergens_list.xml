<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dish_allergens_information"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="@dimen/min_margin"
    android:layout_marginTop="@dimen/min_margin"
    android:layout_marginStart="@dimen/min_margin"
    android:layout_marginEnd="@dimen/min_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_allergen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/max_height_allergen"
            android:maxWidth="@dimen/max_height_allergen"
            android:layout_marginBottom="@dimen/min_margin"
            android:contentDescription="@string/decription_image_allergen" />

        <TextView
            android:id="@+id/allergen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/min_margin"
            android:textSize="@dimen/allergen_text_size"
            tools:text="Allergen 1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_allergen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/max_height_allergen"
            android:maxWidth="@dimen/max_height_allergen"
            android:layout_marginBottom="@dimen/min_margin"
            android:contentDescription="@string/decription_image_allergen" />

        <TextView
            android:id="@+id/allergen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/min_margin"
            android:textSize="@dimen/allergen_text_size"
            tools:text="Allergen 2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_allergen3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/min_margin"
            android:maxHeight="@dimen/max_height_allergen"
            android:maxWidth="@dimen/max_height_allergen"
            android:contentDescription="@string/decription_image_allergen" />

        <TextView
            android:id="@+id/allergen3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/min_margin"
            android:textSize="@dimen/allergen_text_size"
            tools:text="Allergen 3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_allergen4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/max_height_allergen"
            android:maxWidth="@dimen/max_height_allergen"
            android:layout_marginBottom="@dimen/min_margin"
            android:contentDescription="@string/decription_image_allergen" />

        <TextView
            android:id="@+id/allergen4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/min_margin"
            android:textSize="@dimen/allergen_text_size"
            tools:text="Allergen 4" />
    </LinearLayout>


</LinearLayout>